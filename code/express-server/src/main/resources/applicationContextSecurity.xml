<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
  xmlns:beans="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                      http://www.springframework.org/schema/security
                      http://www.springframework.org/schema/security/spring-security-2.0.4.xsd">

    <http entry-point-ref="preAuthenticatedEntryPoint" session-fixation-protection="none" create-session="never" />

    <beans:bean id="preAuthenticatedEntryPoint"
        class="org.springframework.security.ui.preauth.PreAuthenticatedProcessingFilterEntryPoint" />


    <authentication-provider user-service-ref="internalUserService">
      <password-encoder hash="sha">
         <salt-source user-property="username"/>
      </password-encoder>
   </authentication-provider>

</beans:beans>